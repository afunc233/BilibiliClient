<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AvaFFmpegPlayer.Controls">
    <Design.PreviewWith>
        <controls:VideoView />
    </Design.PreviewWith>

    <Style Selector="controls|VideoView">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Margin="{TemplateBinding Padding}" Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}">

                    <Image HorizontalAlignment="Stretch" RenderOptions.BitmapInterpolationMode="HighQuality"
                           VerticalAlignment="Stretch" Stretch="Uniform"
                           x:Name="PART_Image" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>